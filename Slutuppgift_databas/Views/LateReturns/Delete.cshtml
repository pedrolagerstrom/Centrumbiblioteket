@model Slutuppgift_databas.Models.Rental
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Lämna tillbaka bok";
}
<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">


<h1>Lämna tillbaka bok</h1>

<h3>Är du säker på att du vill lämna tillbaka den här boken?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inventory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inventory.InventoryId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.FirstName)
        </dd>        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RentalDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RentalDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpectedReturnDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpectedReturnDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RentalId" />
        <input type="submit" value="Lämna tillbaka" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
